{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
  },
  "include": [
    "src/swagger-output.json",
    "src/**/*"
  ],
  "exclude": ["node_modules/"],
  "typeRoots": [
    "node_modules/@types"
  ],
}